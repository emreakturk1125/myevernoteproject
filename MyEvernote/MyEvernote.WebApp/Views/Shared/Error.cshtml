@using MyEvernote.WebApp.ViewModels
@using MyEvernote.Entities.Messages

@model ErrorViewModel
@{
    ViewBag.Title = Model.Title;
}


<div class="container" style="margin-top:50px">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">@Model.Header</h3>
                </div>
                <div class="panel-body">
                    <div class=" text-danger">
                        <h2><span class="glyphicon glyphicon-remove-circle"></span>&nbsp;&nbsp;<strong>@Model.Title</strong></h2>
                        <hr />
                        <p class="text-justify">
                            @foreach (ErrorMessageObj msg in Model.Items)
                            {
                                @msg.Message<br />
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    string js = string.Empty;
    if (Model.IsRedirecting)
    {
        js = "setTimeout(function(){window.location = '" + Model.RedirectingUrl + "';}," + Model.RedirectingTimeout + ");";
    }
}

<script>
    $(function () {
 

     @Html.Raw(js);

    });
</script>



