@using MyEvernote.WebApp
@model IEnumerable<MyEvernote.Entities.EvernoteUser>

@{
    ViewBag.Title = "Kullanıcı Listesi";
}



<style>
    table {
        width: 100%;
    }

    #example_filter {
        float: right;
    }

    #example_paginate {
        float: right;
    }

    label {
        
        margin-bottom: .5rem;
        margin-top: .5rem;
    }
</style>
<link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap4.min.js"></script>
<div class="row">

    <div class="col-md-10 col-md-offset-1">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">

        <p>
            @Bootstrap.LinkButton("/EvernoteUser/Create", "primary", string.Empty, string.Empty, "plus", " Yeni")
        </p>
        <table id="example" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProfileImageFileName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsAdmin)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.IsDelete)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.ModifiedUsername)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="vertical-align:middle">
                            <img src="~/Images/@item.ProfileImageFileName" class="img-circle" width="60" height="60" />
                        </td>
                        <td style="vertical-align:middle">
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td style="vertical-align:middle">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td style="vertical-align:middle">
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td style="vertical-align:middle">
                            @Html.DisplayFor(modelItem => item.IsAdmin)
                        </td>
                        <td style="vertical-align:middle">
                            @Html.DisplayFor(modelItem => item.IsDelete)
                        </td>
                        <td style="vertical-align:middle">
                            @Html.DisplayFor(modelItem => item.ModifiedUsername)
                        </td>
                        <td style="vertical-align:middle">
                            @Bootstrap.LinkButton("/EvernoteUser/Edit/" + item.Id, "warning", "btn-xs", "Düzenle", "edit", string.Empty)

                            @Bootstrap.LinkButton("/EvernoteUser/Details/" + item.Id, "info", "btn-xs", "Detaylar", "search", string.Empty)

                            @Bootstrap.LinkButton("/EvernoteUser/Delete/" + item.Id, "danger", "btn-xs", "Kaldır", "trash", string.Empty)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>

    $(document).ready(function () {
        $('#example').DataTable();
    });

</script>